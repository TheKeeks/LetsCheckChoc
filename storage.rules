// Cloud Storage Security Rules
// Paste these into Firebase Console → Storage → Rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Approved gallery photos readable by all authenticated users
    match /gallery/{filename} {
      allow read: if request.auth != null;
      // Writes to gallery managed by Admin SDK only
      allow write: if false;
    }

    // surf-photos: users can read/write their own session photos
    match /surf-photos/raw/{userId}/{year}/{month}/{filename} {
      allow read: if request.auth != null
                   && request.auth.uid == userId;
      allow write: if request.auth != null
                    && request.auth.uid == userId
                    && request.resource.size < 10 * 1024 * 1024
                    && request.resource.contentType.matches('image/.*');
    }
  }
}
