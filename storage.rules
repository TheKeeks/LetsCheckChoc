// Cloud Storage Security Rules
// Paste these into Firebase Console → Storage → Rules

rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // user-uploads/{userId}/{spot}/{filename}
    // Users can only read/write their own uploads
    match /user-uploads/{userId}/{spot}/{filename} {
      allow read: if request.auth != null
                  && request.auth.uid == userId;
      allow write: if request.auth != null
                   && request.auth.uid == userId
                   && request.resource.size < 10 * 1024 * 1024      // 10 MB max
                   && request.resource.contentType.matches('image/.*');
    }

    // Approved gallery photos readable by all authenticated users
    match /gallery/{filename} {
      allow read: if request.auth != null;
      // Writes to gallery managed by Admin SDK only
      allow write: if false;
    }
  }
}
